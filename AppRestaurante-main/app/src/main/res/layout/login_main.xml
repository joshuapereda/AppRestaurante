<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#343434">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:text="Bienvenido de Nuevo"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtUsuarioL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/editlext_backgrou"
                android:drawablePadding="16dp"
                android:ems="10"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHint="#FFFFFF"
                app:startIconDrawable="@drawable/account"
                android:hint="@string/labelUsuario">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtContraseñaL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/editlext_backgrou"
                android:drawablePadding="16dp"
                android:ems="10"
                android:inputType="text"
                android:padding="8dp"
                app:startIconDrawable="@drawable/lock"
                android:textColorHint="#FFFFFF"
                app:endIconMode="password_toggle"
                android:hint="@string/labelContraseña">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <ImageButton
                android:id="@+id/imgRegresarB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#343434"
                android:layout_marginTop="16sp"
                app:srcCompat="@drawable/regresar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIngresarL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                style="@android:style/Widget.Button"
                android:textColor="#ffffff"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawableStart="@drawable/xfxf"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Ingresar"
                android:background="@drawable/background_btn_2"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Eres nuevo usuario? Registrate"
                android:textColor="#E1A500"
                 android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>